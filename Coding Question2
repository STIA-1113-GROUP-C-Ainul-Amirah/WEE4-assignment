package assigment1;

import java.util.Scanner;

public class a2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner scanMe = new Scanner (System.in);
		
		System.out.println("Enter yearly interest rate:" );
	    double interest = scanMe.nextDouble(); 
	    
	    System.out.println("Enter number of year:" );
	    int years = scanMe.nextInt(); 
	    
	    System.out.println("Enter yearly interest rate: $" );
	    double loan = scanMe.nextDouble(); 
	    
	    double m = loan* (interest/100);
	    double t = (years*12) * (3.5 /100) * loan;
	    
	    System.out.println("The monthly payment is $" + m);
	    System.out.println("The total payment is $"  + t );
		
	}

}
